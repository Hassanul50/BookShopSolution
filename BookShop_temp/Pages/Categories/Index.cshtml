@page
@model BookShop_temp.Pages.Categories.IndexModel


@*<partial name="_Notification"/>*@

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1 class="text-primary"> Category page</h1>

        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                Create new Category
            </a>

        </div>

    </div>

</div>


<table class="table table-bordered">
    <thead>
        <tr class="table-active">
          
            <th scope="col">Display order</th>
            <th scope="col">Category name</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
        <tr>
            
                <td>@obj.DisplayOrder</td>
                <td>@obj.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger "><i class="bi bi-trash"></i>Delete</a>
                    </div>
                    
                </td>
                
            
        </tr>}
    </tbody>
</table>