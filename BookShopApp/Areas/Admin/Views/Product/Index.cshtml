@model List<Product>


<partial name="_Notification"/>

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h1 class="text-primary"> Product page</h1>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create new Product
            </a>

        </div>

    </div>

</div>


<table class="table table-bordered">
    <thead>
        <tr class="table-active">
          
            <th scope="col">Title</th>
            <th scope="col">ISBN</th>
            <th scope="col">Price</th>
            <th scope="col">Author</th>
            <th scope="col">Category</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
        <tr>

                <td>@obj.Title</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Author</td>
                <td>@obj.ISBN</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" > <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger "><i class="bi bi-trash"></i>Delete</a>
                    </div>
                    
                </td>
                
            
        </tr>}
    </tbody>
</table>